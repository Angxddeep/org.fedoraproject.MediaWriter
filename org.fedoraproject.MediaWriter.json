{
    "id": "org.fedoraproject.MediaWriter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "mediawriter",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=all",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--env=QML2_IMPORT_PATH=/app/lib/qt5/qml"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "Adwaita-qt",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/FedoraQt/adwaita-qt.git",
                    "tag": "1.2.1"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@add_subdirectory(style)@#add_subdirectory(style)@' src/CMakeLists.txt"
                    ]
                }
            ]
        },
        {
            "name": "MediaWriter",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FedoraQt/MediaWriter/archive/refs/tags/4.2.2.tar.gz",
                    "sha256": "c2b24059a7b4ae755e117a01e526e9858178d61f71e8b5318ad756ddae21fe3c"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@\${QT_INSTALL_QML}@/app/lib/qt5/qml@' theme/CMakeLists.txt"
                    ]
                }
            ]
        }
    ]
}
